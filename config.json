{
    "General":{
        "DatasetType":"Static",
        "Task":"Pose-modeling"
    },
    "Dataset":{ 
        "DynamicDataset":{
            "path_input":"./example_images",
            "ext":".png"
        },
        "StaticDataset":{
            "path_input":"./output_pifpaf_pie",
            "ext":".json",
            "im_width":1920,
            "im_height":1080
        },
        "Transforms":{
            "normalize":true,
            "body_parts":true,
            "translation":{
                "enable":false,
                "p":0.5,
                "distance":50
            },
            "mask":{
                "N":7
            }
        },
        "split":{
            "train":["set01", "set02", "set03", "set04", "set05"],
            "val":["set06"]
        }
    },
    "Model":{
        "PosTER":{
            "dim_tokens":3,
            "dim_embed":100,  
            "dim_ff":2048,
            "nlayers":4,  
            "nhead":5,  
            "dropout":0.1 
        }
    },
    "wandb":{
        "enable":true,
        "entity":"younesbelkada",
        "project_name":"PosTER"
    },
    "Training":{
        "optimizer":"adam",
        "learning_rate":0.001,
        "criterion":{
            "type":"mse",
            "enable_bt":true,
            "lmbda":5e-3
        },
        "batch_size":32,
        "epochs":1,
        "save_checkpoint":true,
        "n_samples_visualization":5,
        "log_interval":10
    }
}