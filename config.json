{
    "General":{
        "Task":"Pose-modeling",
        "DatasetType":"TITAN",
        "Model_type":"PosTER",
        "Model_path":"Models"
    },
    "Dataset":{ 
        "DynamicDataset":{
            "path_input":"./example_images",
            "ext":".png"
        },
        "StaticDataset":{
            "path_input":"./output_pifpaf_pie",
            "ext":".json",
            "im_width":1920,
            "im_height":1080
        },
        "TITAN":{
            "dataset_dir":".",
            "pickle_dir":"pkl_files",
            "use_merge":true
        },
        "Transforms":{
            "normalize":true,
            "body_parts":false,
            "translation":{
                "enable":true,
                "p":0.5,
                "distance":50
            },
            "randomflip":{
                "enable":true,
                "p":0.5
            },
            "mask":{
                "value":-100,
                "N":3
            }
        },
        "split":{
            "train":["set01", "set02", "set03", "set04", "set05"],
            "val":["set06"]
        }
    },
    "Model":{
        "PosTER":{
            "dim_tokens":3,
            "dim_embed":128,  
            "dim_ff":1024,
            "nlayers":4,  
            "nhead":8,  
            "dropout":0.2,
            "filename":"Models/posTER_pretrained.p"
        }
    },
    "wandb":{
        "enable":true,
        "entity":"younesbelkada",
        "project_name":"PosTER"
    },
    "Training":{
        "optimizer":"adamw",
        "learning_rate":3e-4,
        "criterion":{
            "type":"mse",
            "enable_bt":true,
            "lmbda":5e-3,
            "beta" : 0.1
        },
        "batch_size":128,
        "epochs":15,
        "save_checkpoint":true,
        "n_samples_visualization":5,
        "log_interval":10
    },
    "Evaluation":{
        "Model_type":"PosTER",
        "Model_path":"./Models/PosTER_FT.p"
    }
}